<h1 class="mt-2">お気に入り一覧</h1>

<%= search_form_for @q, url: favorites_path  do |f| %>
  <%= f.label :title_or_detail_public_or_detail_secret_or_detail_deeply_or_labels_name_cont, '検索条件' %>
  <%= f.search_field :title_or_detail_public_or_detail_secret_or_detail_deeply_or_labels_name_cont %>
  <%= f.submit "検索" %>
<% end %>

<div class="mb-3">
  <table class="table table-hover">
    <thead class="tehad-default">
      <tr>
        <th><%= sort_link(@q, :title, "タイトル") %></th>
        <th><%= sort_link(@q, :score, "嬉しい度", default_order: :desc ) %></th>
        <th><%= sort_link(@q, :user.name, "投稿者") %></th>
        <th><%= sort_link(@q, :created_at, "投稿日", default_order: :desc ) %></th>
        <th><%= sort_link(@q, :created_at, "更新日", default_order: :desc ) %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |p| %>
        <tr>
          <td><%= link_to p.title, post_path(p.id),class: "task_row" %></td>
          <td><%= p.score %>％</td>
          <td><%= p.user.name %></td>
          <td><%= p.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= p.updated_at.strftime('%Y/%m/%d') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%#= paginate @posts %>
</div>