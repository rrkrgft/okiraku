<h1>お気に入り一覧</h1>

<div class="mb-3">
  <table class="table table-hover">
    <thead class="tehad-default">
      <tr>
        <th>タイトル</th>
        <th>嬉しい度</th>
        <th>投稿者</th>
        <th>投稿日</th>
        <th>更新日</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |p| %>
        <tr>
          <td><%= link_to p.title, post_path(p.id),class: "task_row" %></td>
          <td><%= p.score %>％</td>
          <td><%= p.user.name %></td>
          <td><%= p.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= p.updated_at.strftime('%Y/%m/%d') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%#= paginate @posts %>
</div>