<%= form_with(model: @post, local: true) do |post| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mt-4">
    <%= post.label :title %>
    <%= post.text_field :title, class: "form-control", id: "task_name" %>
  </div>
  <%= post.fields_for :detail do |detail| %>
    <div class="field mt-2">
      <%= detail.label :public %>
      <%= detail.text_area :public, class: "form-control" %>
    </div>
    <div class="form-group mt-2">
      <%= detail.label :secret %>
      <%= detail.text_area :secret , class: "form-control" %>
    </div>
    <div class="form-group mt-2">
      <%= detail.label :deeply %><span class="ml-3"><%= detail.label :secret_choice_deep, class: "pl-5" %><%= detail.check_box :secret_choice_deep %></span>
      <%= detail.text_area :deeply , class: "form-control" %>
    </div>
  <% end %>
  <div class="form-group mt-2">
    <%= post.label :score %>
    <%= post.text_field :score , class: "form-control" %>
  </div>
  <div class="form-group mt-2">
    <%= post.label :draft %>
    <%= post.check_box :draft %>
  </div>
  <div class="form-group my-3">
    <% current_user.labels.each do |lab| %>
      <%= post.check_box :label_ids, { multiple: true }, lab[:id], nil %>
      <%= post.label :label_ids, lab.name, value: lab[:id] %>
    <% end %>
  </div>
  <div class="form-group mt-2">
    <%= post.label :image %>
    <%= image_tag(@post.image.url) if @post.image && @post.image.url %>
    <%= post.file_field :image %>
    <%= post.hidden_field :image_cache %>
  </div>

  <%= post.submit "登録", class: "btn btn-primary mt-4" %>
  <%= post.submit "下書き", class: "btn btn-secondary mt-4" %>
<% end %>